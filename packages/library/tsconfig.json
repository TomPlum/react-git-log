{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "modules/*": ["src/modules/*"],
      "assets/*": ["src/assets/*"],
      "components/*": ["src/components/*"],
      "context/*": ["src/context/*"],
      "hooks/*": ["src/hooks/*"],
      "constants/*": ["src/constants/*"],
      "data": ["src/data/index.ts"],
      "types": ["src/types.ts"],
      "test/*": ["src/_test/*"],
    },
    "types": ["vitest/globals", "vite/client"],

    /* Bundler mode */
    "moduleResolution": "node",
    "isolatedModules": true,
    "moduleDetection": "force",

    /* Declaration generation */
    "noEmit": false,
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "dist",

    /* JSX handling */
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "vite.config.ts",
    "tsconfig.json"
  ]
}